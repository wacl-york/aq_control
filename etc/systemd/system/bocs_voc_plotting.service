[Unit]
Description=BOCS VOC Sensor Plotting
After=bocs_control.service

[Service]
WorkingDirectory=/home/pi/bocs_control/plot
User=pi
Group=pi
ExecStart=/usr/bin/env gnuplot -p /home/pi/bocs_control/plot/voc.plt
Type=simple
Restart=always
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/pi/.Xauthority"

[Install]
WantedBy=multi-user.target
